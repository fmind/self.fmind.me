# MEM
REDIS_PORT=6379
REDIS_HOST={{redis_bind_interface}}

# SQL
DB_PORT=5432
DB_HOST=localhost
DB_USER=mastodon
DB_NAME=mastodon
DB_PASS={{mastodon_database_pass}}

# WEB
LOCAL_DOMAIN={{me_social}}

# APP
DEFAULT_LOCALE=en
SINGLE_USER_MODE=true
OTP_SECRET={{mastodon_otp}}
SECRET_KEY_BASE={{mastodon_secret}}
VAPID_PUBLIC_KEY={{mastodon_vapid_public}}
VAPID_PRIVATE_KEY={{mastodon_vapid_private}}

# MAIL
SMTP_AUTH_METHOD=login
SMTP_PORT={{mail_port}}
SMTP_SERVER={{mail_host}}
SMTP_LOGIN={{mail_user}}
SMTP_PASSWORD={{mail_pass}}
SMTP_FROM_ADDRESS={{mail_from}}@{{mail_domain}}
